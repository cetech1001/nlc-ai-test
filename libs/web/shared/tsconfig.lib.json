{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "rootDir": "src",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../../sdk/messages/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/communities/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/users/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/agents/tsconfig.lib.json"
    },
    {
      "path": "../settings/tsconfig.lib.json"
    },
    {
      "path": "../utils/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/notifications/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/main/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/billing/tsconfig.lib.json"
    },
    {
      "path": "../../sdk/core/tsconfig.lib.json"
    },
    {
      "path": "../../types/tsconfig.lib.json"
    },
    {
      "path": "../ui/tsconfig.lib.json"
    }
  ]
}
